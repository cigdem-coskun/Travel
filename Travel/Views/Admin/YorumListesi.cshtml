@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model List<BlogYorumModel>
@{
    ViewData["Title"] = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>YorumListesi</h1>
@if(TempData["Mesaj"] !=null)
{
    <p class="text-primary">@TempData["Mesaj"]</p>
}
<table class="table table-bordered">
    <tr>
       <th>ID</th>
        <th>Kullanıcı </th>
        <th>Mail </th>
        <th>Yorum </th>
      @*   <th>Blog Adı </th>*@
        <th>Sil</th>
       @* <th>Güncelle </th>*@
    </tr>
    @foreach (var item in Model)
    {
        
  
    <tr>
        <td>@item.Id</td>
        <td>@item.KullaniciAdi</td>
        <td>@item.Mail</td>
        <td> @item.Yorum</td>
        @* <td> @item.Baslik</td>*@
         <td> <a href="/Admin/YorumSil/@item.Id" class="btn btn-danger">Sil</a></td>
        @*  <td> <a href="/Admin/YorumGüncelle/@item.Id" class="btn btn-warning">Güncelle</a></td>*@
    </tr>
      }
  
</table>
